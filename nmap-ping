#!/bin/sh
NAME="Nmap"
BIN="/usr/bin/nmap"
ARGS="-sP -oG -"

print_exit()
{
    echo "$NAME check: ${2}"
    exit $1
}

[ -x "$BIN" ] || print_exit 255 "Could not find $BIN. Is $NAME installed?"

res=`$BIN $ARGS $1 | grep '^Host' | sed 's/.*Status: \(.*\)$/\1/'`

echo ${res} | grep "Down"
    [ $? -eq 0 ] && print_exit 2 "CRITICAL"

echo ${res} | grep "Up"
    [ $? -eq 0 ] && print_exit 0 "Ok"

results_exit 3 "Unknown"
